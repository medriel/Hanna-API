// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  company    Company  @relation(fields: [company_id], references: [cnpj])
  company_id Int

  @@map("users")
}

model Company {
  cnpj Int    @id @unique
  name String

  users    User[]
  products Product[]

  @@map("companies")
}

model Product {
  code                String    @id @unique
  name                String
  quantity            Int
  unit_of_measurement String
  reference           String
  Location            Location? @relation(fields: [location_id], references: [localization])
  location_id         String
  Company             Company   @relation(fields: [company_id], references: [cnpj])
  company_id          Int

  @@map("products")
}

model Location {
  localization String @id
  type         String
  reference    String

  products Product[]

  @@map("locations")
}
